[init]
	defaultBranch = main
[user]
	name = phnaharris
	email = phnanh.harris@gmail.com
[diff]
    tool = nvimdiff
[merge]
    tool = nvimdiff
[alias]
    a = add
    br = branch
    c = commit -m
    ca = commit --amend
    co = checkout
    commit = cz
    hist = log --pretty=format:\"%Cgreen%h %Creset%cd %Cblue[%cn] %Creset%s%C(yellow)%d%C(reset)\" --graph --date=relative --decorate --all
    llog = log --graph --name-status --pretty=format:\"%C(red)%h %C(reset)(%cd) %C(green)%an %Creset%s %C(yellow)%d%Creset\" --date=relative
    open = "!hub browse"
    st = status
    r = restore
    rs = restore --staged
    wta = worktree add
    wtl = worktree list
    wtr = worktree remove
    wtp = worktree prune
[remote]
	pushDefault = origin
